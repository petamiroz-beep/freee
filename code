import random
import time

# –ë–∞–∑–∞ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π (–º–æ–∂–Ω–æ –ª–µ–≥–∫–æ —Ä–∞—Å—à–∏—Ä–∏—Ç—å)
predictions = [
    "–°–µ–≥–æ–¥–Ω—è —Ç—ã –Ω–∞–π–¥–µ—à—å —Ç–æ, —á—Ç–æ –¥–∞–≤–Ω–æ –ø–æ—Ç–µ—Ä—è–ª.",
    "–ë–µ—Ä–µ–≥–∏—Å—å –Ω–µ–æ–∂–∏–¥–∞–Ω–Ω—ã—Ö –∑–≤–æ–Ω–∫–æ–≤ –ø–æ—Å–ª–µ –æ–±–µ–¥–∞.",
    "–¢–µ–±—è –∂–¥–µ—Ç –ø—Ä–∏—è—Ç–Ω–æ–µ –∑–Ω–∞–∫–æ–º—Å—Ç–≤–æ.",
    "–ù–µ –±–æ–π—Å—è —Ä–∏—Å–∫–æ–≤–∞—Ç—å ‚Äî —É–¥–∞—á–∞ –Ω–∞ —Ç–≤–æ–µ–π —Å—Ç–æ—Ä–æ–Ω–µ.",
    "–ö—Ç–æ-—Ç–æ —Ç–∞–π–Ω–æ –≤–æ—Å—Ö–∏—â–∞–µ—Ç—Å—è —Ç–æ–±–æ–π –ø—Ä—è–º–æ —Å–µ–π—á–∞—Å.",
    "–°–ª–µ–¥—É—é—â–∞—è –Ω–µ–¥–µ–ª—è –ø—Ä–∏–Ω–µ—Å–µ—Ç –±–æ–ª—å—à–∏–µ –ø–µ—Ä–µ–º–µ–Ω—ã.",
    "–õ—É—á—à–µ–µ, —á—Ç–æ —Ç—ã –º–æ–∂–µ—à—å —Å–¥–µ–ª–∞—Ç—å —Å–µ–≥–æ–¥–Ω—è ‚Äî –≤—ã—Å–ø–∞—Ç—å—Å—è.",
    "–¢—ã –ø–æ–ª—É—á–∏—à—å –Ω–µ–±–æ–ª—å—à—É—é, –Ω–æ –ø—Ä–∏—è—Ç–Ω—É—é –¥–µ–Ω–µ–∂–Ω—É—é —Å—É–º–º—É.",
    "–ó–∞–≥–ª—è–Ω–∏ –≤ —Å—Ç–∞—Ä—ã–π —Ñ–æ—Ç–æ–∞–ª—å–±–æ–º, —Ç–µ–±—è –∂–¥–µ—Ç —Å—é—Ä–ø—Ä–∏–∑.",
    "–ó–≤–µ–∑–¥—ã –≥–æ–≤–æ—Ä—è—Ç: –ø–æ—Ä–∞ —Å—ä–µ—Å—Ç—å –ø–∏—Ü—Ü—É!"
]

# –°–º–µ—à–Ω—ã–µ "–æ—à–∏–±–∫–∏" –¥–ª—è –∞—Ç–º–æ—Å—Ñ–µ—Ä—ã
errors = [
    "–û—à–∏–±–∫–∞ –¥–æ—Å—Ç—É–ø–∞ –∫ –∑–≤–µ–∑–¥–∞–º. –ü–µ—Ä–µ–∑–∞–≥—Ä—É–∑–∏—Ç–µ –≤—Å–µ–ª–µ–Ω–Ω—É—é.",
    "–°–±–æ–π –≤ –º–∞—Ç—Ä–∏—Ü–µ. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –µ—â–µ —Ä–∞–∑.",
    "–¢—É–º–∞–Ω–Ω–æ—Å—Ç—å –û—Ä–∏–æ–Ω–∞ –ø–µ—Ä–µ–≥—Ä—É–∂–µ–Ω–∞. –ñ–¥–∏—Ç–µ..."
]

def magic_8_ball():
    """–ì–ª–∞–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –∏–≥—Ä—ã."""
    print("üîÆ –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –ú–∞–≥–∏—á–µ—Å–∫–∏–π –®–∞—Ä –°—É–¥—å–±—ã! üîÆ")
    name = input("–ö–∞–∫ —Ç–µ–±—è –∑–æ–≤—É—Ç, –∏—Å–∫–∞—Ç–µ–ª—å –∏—Å—Ç–∏–Ω—ã? ")

    while True:
        question = input(f"\n{name}, –∑–∞–¥–∞–π —Å–≤–æ–π –≤–æ–ø—Ä–æ—Å (–∏–ª–∏ –Ω–∞–ø–∏—à–∏ '—Ö–≤–∞—Ç–∏—Ç' –¥–ª—è –≤—ã—Ö–æ–¥–∞): ")

        if question.lower() == '—Ö–≤–∞—Ç–∏—Ç':
            print("‚ú® –ü—É—Å—Ç—å —É–¥–∞—á–∞ —Å–ª–µ–¥—É–µ—Ç –∑–∞ —Ç–æ–±–æ–π! ‚ú®")
            break

        if not question.endswith('?'):
            print("ü§î –•–º... –í–æ–ø—Ä–æ—Å –¥–æ–ª–∂–µ–Ω –∑–∞–∫–∞–Ω—á–∏–≤–∞—Ç—å—Å—è –≤–æ–ø—Ä–æ—Å–∏—Ç–µ–ª—å–Ω—ã–º –∑–Ω–∞–∫–æ–º.")
            continue

        print("–ú–∞–≥–∏—á–µ—Å–∫–∏–π —à–∞—Ä –∞–Ω–∞–ª–∏–∑–∏—Ä—É–µ—Ç —Ç–≤–æ–µ –±—É–¥—É—â–µ–µ...")
        time.sleep(2)  # –≠—Ñ—Ñ–µ–∫—Ç –∑–∞–≥–∞–¥–æ—á–Ω–æ—Å—Ç–∏

        # –°–ª—É—á–∞–π–Ω—ã–π –≤—ã–±–æ—Ä: –≤—ã–¥–∞—Ç—å –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–µ –∏–ª–∏ "–æ—à–∏–±–∫—É"
        if random.random() < 0.1:  # 10% —à–∞–Ω—Å –Ω–∞ –≥–ª—é–∫
            print(f"üí• –°–ò–°–¢–ï–ú–ù–ê–Ø –û–®–ò–ë–ö–ê: {random.choice(errors)} üí•")
        else:
            print(f"üîÆ –ú–æ–π –æ—Ç–≤–µ—Ç: {random.choice(predictions)} üîÆ")

# –¢–æ—á–∫–∞ –≤—Ö–æ–¥–∞ –≤ –ø—Ä–æ–≥—Ä–∞–º–º—É
if __name__ == "__main__":
    magic_8_ball()
